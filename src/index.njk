---
layout: layout.njk
title: Home
scripts: ["/js/home-bubbles.js"]
---

{% set bubbleVars = ['bubble-1', 'bubble-2', 'bubble-3', 'bubble-4', 'bubble-5'] %}
<div class="home-page">
  <h1 class="home-title">Vibe Notes</h1>
  <p class="home-subtitle">Research notes, floating in the void</p>

  <div class="bubbles-container">
    {% for topic in topics.topics %}
    <a href="{{ '/topic/' + topic.id + '/' | url }}" class="topic-bubble bubble" 
       style="--bubble-color: var(--{{ bubbleVars[loop.index0 % 5] }}); --float-delay: {{ loop.index0 * 2 }}s;"
       data-summary="{{ topic.summary }}"
       data-image="{{ ('/' + topic.image) | url }}">
      <span class="bubble-inner">
        <span class="bubble-label">{{ topic.title }}</span>
        <div class="bubble-expand">
          <img src="{{ ('/' + topic.image) | url }}" alt="{{ topic.title }}" class="bubble-img" />
          <p class="bubble-summary">{{ topic.summary }}</p>
        </div>
      </span>
    </a>
    {% endfor %}
  </div>
</div>
